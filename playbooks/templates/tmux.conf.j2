set -g allow-rename on
set -g base-index 1
set -g default-command "${SHELL}"
set -g default-terminal "screen-256color"
set -g history-limit 10000
set -g message-command-style "fg=colour234"
set -g message-style "fg=colour234"
set -g mouse on
set -g renumber-windows on
set -g status-interval 1

set -g aggressive-resize off
set -g mode-style "bg=colour24,fg=colour231"
set -g pane-border-format " #P [#{s|{{ ansible_user_dir }}|~|:pane_current_path}] "
set -g pane-border-status top
{% if tmux_semver is version('3.2', operator='>=') %}
set -g pane-active-border-style "bold,bg=default,#{?window_zoomed_flag,fg=colour160,#{?pane_synchronized,fg=colour37,fg=colour166}}"
set -g pane-border-style "bg=default,#{?pane_synchronized,fg=colour37,fg=colour136}"
set -g pane-border-lines single
{% endif -%}
set -g status 2
set -g status-format[1] "#[align=right]#(tmux-status)"
set -g status-left ""
set -g status-position top
set -g status-right "#[fg=colour61,bold][#{session_name}]#[nobold]"
set -g status-style "bg=default"
set -g window-status-activity-style "fg=colour33,bg=default"
set -g window-status-current-format "#[bg=colour33,bold] #I: #W #[nobold]"
set -g window-status-current-style "fg=colour231,bg=default"
set -g window-status-format "#[fg=colour33,bg=default,bold] #I: #W #[nobold]"

bind -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe
{%- if 'Darwin' in ansible_system %} "pbcopy"
{% elif 'Linux' in ansible_system %} "xsel -i -p && xsel -o -p | xsel -i -b"
{% endif -%}
bind -T copy-mode-vi WheelDownPane send -N2 -X scroll-down  # fix scrolling speed
bind -T copy-mode-vi WheelUpPane send -N2 -X scroll-up      # fix scrolling speed
bind '%' split-window -h -c "#{pane_current_path}"          # new pane opens to same directory
bind '"' split-window -c "#{pane_current_path}"             # new pane opens to same directory
bind 'D' run-shell "tmux-dump-pane"
{% if tmux_semver is version('3.2', operator='>=') %}
bind 'N' display-popup -E "vim ~/Development/Scratch/Notes"
bind 'O' display-popup -E "cd ~/Development/Scratch/; vim"
bind 'P' display-popup -E "zsh"
{% endif -%}
bind 'U' run-shell "exec zsh"
bind 'h' select-layout even-vertical
bind 'k' clear-history
bind 'r' rename-window "#{b:pane_current_path}"
bind 'u' source-file "~/.tmux.conf"
bind 'v' select-layout even-horizontal
bind 'y' set synchronize-panes
