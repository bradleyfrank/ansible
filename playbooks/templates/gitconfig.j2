[alias]
  co = checkout
  common = rev-parse --git-common-dir
  graph = log --oneline --decorate --graph --all
  history = log --full-history --
  last = log -1 HEAD --stat
  ll = log --oneline
  s = switch
  sa = stash --include-untracked
  sb = status -sb
  search = !git rev-list --all | xargs git grep -F
  top = rev-parse --show-toplevel
  trim = !git branch | grep --invert-match '*' | cut -c 3- \
    | fzf --multi --ansi -i -1 --height=50% --reverse -0 --inline-info --border --preview='git log {} --' \
    | xargs --no-run-if-empty git branch --delete --force
  unstage = reset HEAD --
  upstream = !git branch --show-current | xargs -I{} git branch --set-upstream-to origin/{} {}
  wipe = !git stash --include-untracked && git stash drop
  wt = worktree
  wta = "!git worktree add .worktree/$1"
  wtr = !git worktree list --porcelain | grep -E "^worktree" | tail -n+2 | awk '{print $2}' \
    | fzf --multi --ansi -i -1 --height=50% --reverse -0 --inline-info --border --preview='git log {} --' --delimiter / --with-nth -1 \
    | xargs -I{} git worktree remove {}
  wtl = worktree list
[core]
  excludesfile = {{ ansible_user_dir }}/.gitignore
  editor = vim
  pager = delta
[delta]
  syntax-theme = Solarized (light)
  navigate = true
  line-numbers = true
[help]
  autocorrect = 20
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[pull]
  rebase = true
[push]
  default = current
[rebase]
  autoStash = true
[user]
  name = {{ ansible_user_gecos }}
  email = {{ email }}
