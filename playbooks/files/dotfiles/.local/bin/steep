#!/usr/bin/env bash

#
# Updates Homebrew packages.
# Author: Brad Frank
# Date: September 2021
# Tested: GNU bash, version 5.1.8(1)-release (x86_64-apple-darwin20.3.0)
# Requires: homebrew
#

xcode-select --version &> /dev/null || xcode-select --install
brew update
brew upgrade
while read -r pkg; do brew uninstall "$pkg"; done <<< "$(brew leaves --installed-as-dependency)"
brew cleanup
brew doctor
