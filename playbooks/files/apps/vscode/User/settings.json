{
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "phase",
    "editor.fontFamily": "SauceCodePro Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.insertSpaces": true,
    "editor.occurrencesHighlight": false,
    "editor.renderWhitespace": "none",
    "editor.rulers": [100],
    "editor.selectionHighlight": false,
    "editor.tabSize": 2,
    "editor.tokenColorCustomizations": {
        "[Solarized Light]": {
            "comments": "#6c71c4"
        }
    },
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 100,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "git.ignoreMissingGitWarning": true,
    "git.confirmSync": false,
    "git.useEditorToCommit": true,
    "gitlens.blame.heatmap.enabled": false,
    "gitlens.blame.heatmap.location": "left",
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.annotations.over": "annotation",
    "python.formatting.blackArgs": ["--line-length", "100"],
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintUseMinimalCheckers": false,
    "redhat.telemetry.enabled": true,
    "remote.SSH.remotePlatform": { "*": "linux" },
    "security.workspace.trust.enabled": false,
    "shellcheck.customArgs": [
        "-x"
    ],
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "SauceCodePro Nerd Font",
    "terminal.integrated.inheritEnv": false,
    "update.mode": "none",
    "window.newWindowDimensions": "maximized",
    "window.openFilesInNewWindow": "on",
    "window.restoreWindows": "all",
    "workbench.activityBar.visible": true,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#747474",
        "editorIndentGuide.background": "#00000000",
        "[Solarized Light]": {
            "editor.selectionBackground": "#93a1a166",
            "editor.findMatchBackground": "#93a1a166"
        }
    },
    "workbench.colorTheme": "Solarized Light",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.restoreViewState": true,
    "workbench.editor.wrapTabs": true,
    "workbench.list.openMode": "doubleClick",
    "workbench.panel.defaultLocation": "right",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    "workbench.tree.renderIndentGuides": "onHover",
    "yaml.customTags": [
        "!encrypted/pkcs1-oaep scalar",
        "!vault scalar"
    ]
}
