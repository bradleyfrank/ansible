alias bat='batcat'
{% else %}
unalias run-help

{% endif %}
alias bwatch='batwatch'
alias condense='grep -Erv "(^#|^$)"'
alias cp='cp -i'
alias dirdiff='git diff --no-index'
alias e='aunpack'
alias ff='fastfetch'
alias glances='glances --theme-white'
