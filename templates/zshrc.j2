alias ld='lz --only-dirs'
alias lg='lz --group'
alias lG='lz --git'
alias lk='lz --sort type'
alias ll='lz --octal-permissions'
alias lt='lz --tree'
alias lT='lz --sort time'
alias lS='lz --sort size'

