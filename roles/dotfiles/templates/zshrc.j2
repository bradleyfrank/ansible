function precmd() {
  local rc=$?
  local bold="%B" nobold="%b" nocolor="%f"
  local blue="%F{33}" \
        cyan="%F{37}" \
        violet="%F{61}" \
        green="%F{64}" \
        magenta="%F{125}" \
        red="%F{160}" \
        orange="%F{166}" \
        base03="%F{234}"
  local eol=$'\n'

  # -- cwd segment -- #
  _CWD="${blue}→ %(3~|%-1~/.../%1~|%~)${nocolor}"

  # -- kubectl context segment -- #
  if context="$(kubectl config current-context 2> /dev/null | grep -o '[^_]*$')"; then
    _KUBECTL="${violet} ☸ ${context}${nocolor}"
  else
    _KUBECTL=""
  fi

  # -- virtualenv segment -- #
  if [[ -n "$VIRTUAL_ENV" ]]; then
    _PYENV="${cyan} ೭ $(python --version) ($(basename "$VIRTUAL_ENV"))${nocolor}"
  else
    _PYENV=""
  fi

  # -- git segment -- #
  if toplevel="$(git rev-parse --show-toplevel 2> /dev/null)"; then
    _GIT="${green} ⇄ ${toplevel##*/}/${nocolor}"
  else
    _GIT=""
  fi

  # -- prompt segment -- #
  case "$rc" in
    0) _PROMPT="${green}%#${nocolor} "   ;;
    1) _PROMPT="${red}%#${nocolor} "     ;;
    *) _PROMPT="${magenta}%#${nocolor} " ;;
  esac

  __git_ps1 "${eol}${bold}${_CWD}${_KUBECTL}${_GIT}" "${_PYENV}${eol}${_PROMPT}${nobold}" "%s"
}


