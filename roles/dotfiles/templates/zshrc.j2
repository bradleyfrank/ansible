function findproc() {
  local pid
  if [[ "$1" =~ ^[0-9]+$ ]]; then pid="$(ps -o sid= -p "$1")"; else pid="$(pgrep "$1")"; fi
  ps --forest -o pid,ppid,user,time,cmd -g "$pid"
}

